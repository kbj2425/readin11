        }

        .badge-rank {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .badge-name {
            font-size: 1.3em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .badge-month {
            font-size: 1.1em;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .badge-reward {
            background: rgba(255,255,255,0.3);
            padding: 8px 15px;
            border-radius: 20px;
            display: inline-block;
            margin-top: 10px;
            font-weight: bold;
        }

        .badge-item.gold .badge-reward,
