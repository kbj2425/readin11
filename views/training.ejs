        for (let i = 1; i <= count; i++) {
            this.createPreciseBeep(audioStartTime + 0.6 + (i - 1) * 0.6);
            
            // ì‹œê°ì  í”¼ë“œë°±
            if (onBeep) {
                setTimeout(() => {
