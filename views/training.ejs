class PrecisionAudioManager {
    constructor() {
        this.audioContext = null;
        this.masterGain = null;
        this.initialized = false;
        this.isPlaying = false;
        
        this.FREQUENCY = 800;
        this.BEEP_DURATION = 0.15;
        this.BPM = 100;
        this.BEAT_INTERVAL = 60 / this.BPM;
        this.ATTACK_TIME = 0.01;
        this.RELEASE_TIME = 0.05;
        
        // ìˆ«ì ìŒì„± íŒŒì¼ URL (Google Drive)
       // ìˆ«ì ìŒì„± íŒŒì¼ URL (ë¡œì»¬ íŒŒì¼)
this.numberAudioUrls = {
    combined: '/sounds/numbers_1-10.mp3'  // í†µí•© íŒŒì¼ (6000ms)
};
    }
    
    async init() {
        if (this.initialized) return;
        
        try {
            this.audioContext = new (window.AudioContext || window.webkitAudioContext)({
                latencyHint: 'interactive',
                sampleRate: 44100
            });
            
            this.masterGain = this.audioContext.createGain();
            this.masterGain.connect(this.audioContext.destination);
            this.masterGain.gain.setValueAtTime(0.6, this.audioContext.currentTime);
            
            if (this.audioContext.state === 'suspended') {
                await this.audioContext.resume();
            }
            
            this.initialized = true;
            console.log('ì˜¤ë””ì˜¤ ì‹œìŠ¤í…œ ì´ˆê¸°í™” ì™„ë£Œ');
            
        } catch (error) {
